@page "/"
@rendermode InteractiveServer

<PageTitle>Home</PageTitle>


<MudText Typo="Typo.h3" GutterBottom="true">Hello, world!</MudText>

<MudDataGrid T="Order">
    <Columns>
        <PropertyColumn Property="x => x.OrderNumber" Title="Order Number" />
        <PropertyColumn Property="x => x.OrderDate" Title="Order Date" />
        <PropertyColumn Property="x => x.ContactName" Title="Name" />
        <PropertyColumn Property="x => x.ContactNumber" Title="Ph. Number" />
        
    </Columns>
</MudDataGrid>

@code{
    private List<Order> Orders;

    protected override void OnInitialized()
    {
        Orders = ExampleAppContext.Orders;
    }

}